autodetach on
startup_message off 
bind s screen -ln -t root sudo su -
bind l next
bind h prev
bind q quit
vbell on
ignorecase on
hardstatus on
screen -ln -t htop htop
screen -ln -t im
screen -ln -t shell
select 3
shelltitle shell
hardstatus alwayslastline 
hardstatus string "%{= kw}%d.%m %c %{= kR}@%H%{-} %50= [%-=%{= kg}%-w%50L>%{=b kG}%n %t%{= kg}%+w %{= kw}%-=]%<"
